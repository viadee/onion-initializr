import './App.css';
import React, { useState } from 'react';
{{#if firstAppService}}
{{#if useShadcn}}
// ShadCN/UI imports would go here when implemented
// For now, using standard React with placeholder styling
{{else}}
import container from '../Configuration/awilix.config';
{{/if}}
import { {{firstAppService}} } from '../../Application/Services/{{firstAppService}}';
{{/if}}

function App() {
  {{#if firstAppService}}
  const [message, setMessage] = useState("Click to run use case");
  const [loading, setLoading] = useState(false);

  const handleRunExampleUseCase = async () => {
    setLoading(true);
    try {
      {{#if useShadcn}}
      // TODO: Implement ShadCN/UI service resolution
      // For now, using direct instantiation
      const service = new {{firstAppService}}();
      await service.runExampleUseCase();
      setMessage("{{firstAppService}}: use case executed âœ… (ShadeCN mode)");
      {{else}}
      const service = container.resolve<{{{firstAppService}}}>("{{camel firstAppService}}");
      await service.runExampleUseCase();
      setMessage("{{firstAppService}}: use case executed âœ…");
      {{/if}}
    } catch (err) {
      setMessage("Error: " + (err as Error).message);
    } finally {
      setLoading(false);
    }
  };
  {{/if}}

  return (
    <div className="app">
      <h1>ðŸ§… Onion Architecture + React{{#if useShadcn}} + ShadCN/UI{{/if}}</h1>
      {{#if firstAppService}}
      <div className="content">
        {{#if useShadcn}}
        {/* ShadCN/UI Button component would be used here when implemented */}
        <button 
          onClick={handleRunExampleUseCase} 
          disabled={loading}
          className="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 disabled:opacity-50"
        >
          {loading ? "Running..." : message}
        </button>
        {{else}}
        <button onClick={handleRunExampleUseCase} disabled={loading}>
          {loading ? "Running..." : message}
        </button>
        {{/if}}
      </div>
      {{else}}
      <p>Add some entities and services to get started!</p>
      {{/if}}
    </div>
  );
}

export default App;
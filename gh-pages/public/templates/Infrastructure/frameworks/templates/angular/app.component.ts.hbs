{{#if firstAppService}}
import { Component } from '@angular/core';
{{#unless useAngularDI}}
import container from '../configuration/awilix.config';
{{/unless}}
import { {{firstAppService}} } from '../../Application/Services/{{firstAppService}}';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.scss']
})
export class App {
  message = 'Click to run use case';
  loading = false;

  {{#if useAngularDI}}
  constructor(private readonly {{camel firstAppService}}: {{firstAppService}}) {}
  {{/if}}

  async runExampleUseCase() {
    this.loading = true;
    try {
      {{#if useAngularDI}}
      await this.{{camel firstAppService}}.runExampleUseCase();
      this.message = '{{firstAppService}}: use case executed ✅';
      {{else}}
      const service = container.resolve<{{{firstAppService}}}>("{{{camel firstAppService}}}");
      await service.runExampleUseCase();
      this.message = '{{firstAppService}}: use case executed ✅';
      {{/if}}

    } catch (err) {
      this.message = '❌ Error: ' + (err as Error).message;
    } finally {
      this.loading = false;
    }
  }
}
{{else}}
import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.scss']
})
export class AppComponent {}
{{/if}}

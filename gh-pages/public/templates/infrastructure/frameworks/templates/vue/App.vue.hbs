<template>
  <div class='app'>
    <h1>üßÖ Onion Architecture + Vue</h1>
    {{#if firstAppService}}
      <button @click='runExampleUseCase' :disabled='loading'>
        <span v-if='loading'>Running...</span>
        <span v-else>Run Use Case</span>
      </button>
      <p>\{{ message }}</p>

    {{else}}
      <p>No application services were defined.</p>
    {{/if}}
  </div>
</template>

<script lang='ts' setup>
  import { ref } from 'vue';

    import container from '../configuration/awilix.config'; import {
    {{firstAppService}}
    } from '../../application/services/{{firstAppService}}'; const message =
    ref("Click to run use case"); const loading = ref(false); const
    runExampleUseCase = async () => { loading.value = true; try { const service
    = container.resolve<{{{firstAppService}}}>("{{{camel firstAppService}}}");
    await service.runExampleUseCase(); message.value = "{{firstAppService}}: use
    case executed ‚úÖ"; } catch (err) { message.value = "‚ùå Error: " + (err as
    Error).message; } finally { loading.value = false; } };
  {{/if}}
</script>


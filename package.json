    "cli:link": "pnpm --filter cli link",
    "gh-pages:build": "pnpm --filter gh-pages github-build",
    "gh-pages:deploy": "pnpm --filter gh-pages github-deploy"
  },
  "keywords": [
    "onion-architecture",
    "architecture",
    "cli",
    "typescript",
    "monorepo"
  ],
  "author": "viadee",
